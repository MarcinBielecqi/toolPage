<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<!--musi być layout albo form-->
	<!--ale nie dublować np VerticalLayout w VerticalLayout-->
	<l:VerticalLayout id="containerLayout" width="100%">
		<l:BlockLayout id="BlockLayout" background = "Light">
			<l:BlockLayoutRow accentCells="Accent1">
				<l:BlockLayoutCell id="Accent1" width="2" title="Left aligned heading">
					<Text text="text"/>
					<RadioButtonGroup columns="2" selectedIndex="2" class="sapUiMediumMarginTop">
						<buttons>
							<RadioButton id="RB2-1" text="Option 1"/>
							<RadioButton id="RB2-2" text="Option 2" editable="false"/>
							<RadioButton id="RB2-3" text="Option 3"/>
						</buttons>
					</RadioButtonGroup>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell title="25% width cell">
					<Text text="text"/>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell titleAlignment="End" title="End aligned heading">
					<Text text="text"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell title="50% width cell">
					<Text text="text"/>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell title="50% width cell">
					<FeedInput showIcon="true"/>
					<FeedInput showIcon="true"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow scrollable="true">
				<l:BlockLayoutCell width="50" title="Cell inside scrollable row">
					<Text text="text"/></l:BlockLayoutCell>
				<l:BlockLayoutCell width="100" title="Centered Heading" titleAlignment="Center">
					<Text text="text"/>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<Text text="text"/>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell width="90">
					<Text text="text"/>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<Text text="text"/>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<Text text="text"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell>
					<Text text="text"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow accentCells="Accent2">
				<l:BlockLayoutCell id="Accent2">
					<MessageStrip text="You can use the cells with 100% width, if you set the vertical property of the row to true"/>
					<Text text="text"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</l:VerticalLayout>
</core:FragmentDefinition>